# ---------------------------
# Drupal-specific ignores
# ---------------------------

# Ignore directories and files generated by Drupal
sites/*/files/
sites/*/private/
sites/*/settings*.php

# Ignore vendor directory, as Composer manages these dependencies
/vendor/

# Ignore directories and files that might be generated during development
*.log
*.tar
*.tar.gz
*.zip
*.sql
*.sqlite

# ---------------------------
# macOS-specific ignores
# ---------------------------

# Ignore .DS_Store file created by macOS
.DS_Store

# ---------------------------
# Development tool ignores
# ---------------------------

# PHPStorm & IntelliJ
.idea/

# Node & JS tooling
node_modules/
yarn.lock
package-lock.json

# Composer
composer.phar

# Ignore .env files as they might contain sensitive data
*.env
